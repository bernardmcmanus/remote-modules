{
  "name": "remote-modules",
  "private": true,
  "license": "UNLICENSED",
  "description": "A module manager for distributed applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/bernardmcmanus/remote-modules.git"
  },
  "author": {
    "name": "Bernard McManus",
    "email": "bernard.mcmanus.iv@gmail.com",
    "url": "https://github.com/bernardmcmanus"
  },
  "homepage": "https://github.com/bernardmcmanus/remote-modules",
  "keywords": [
    "javascript",
    "universal",
    "remote",
    "module",
    "import",
    "dynamic"
  ],
  "engines:": {
    "node": ">=8",
    "npm": ">=6",
    "yarn": ">=1.8.0"
  },
  "engineStrict": true,
  "scripts": {
    "build": "lerna run build --scope=*/{helpers,logger} && lerna run build --ignore=*/{helpers,logger}",
    "clean": "npm run clean:self && lerna run clean",
    "clean:self": "rimraf .remote coverage",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "eslint": "eslint --ext .js,.ts",
    "format": "prettier --write '**/*.{js,json,ts}'",
    "lint": "npm run eslint . && lerna run validate:ts",
    "postinstall": "lerna bootstrap",
    "pretest": "npm run clean:self && npm run build && npm run lint",
    "publish": "lerna publish --npm-tag next",
    "remote-modules": "node -r ./babel-register packages/cli/src",
    "test": "npm run unit -- --coverage",
    "toc": "bash -c 'markdown-toc -i README.md'",
    "unit": "NODE_ENV=${NODE_ENV:-test} jest"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "npm run eslint -- --fix",
      "git add"
    ],
    "*.{json,yaml}": [
      "prettier --write",
      "git add"
    ],
    "!*/README.md": [
      "npm run toc",
      "git add"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.2",
    "@types/sinon": "^5.0.7",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "lint-staged": "^7.3.0",
    "markdown-toc": "^1.2.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "nodemon": "^1.18.6",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.1",
    "typescript": "^3.1.6",
    "typescript-eslint-parser": "^21.0.1"
  }
}
