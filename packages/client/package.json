{
  "name": "@remote-modules/client",
  "version": "0.0.0",
  "license": "MIT",
  "description": "A module manager for distributed applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/bernardmcmanus/remote-modules.git"
  },
  "author": {
    "name": "Bernard McManus",
    "email": "bernard.mcmanus.iv@gmail.com",
    "url": "https://github.com/bernardmcmanus"
  },
  "homepage": "https://github.com/bernardmcmanus/remote-modules",
  "keywords": [
    "javascript",
    "universal",
    "remote",
    "module",
    "import",
    "dynamic",
    "client"
  ],
  "engines:": {
    "node": ">=8",
    "npm": ">=6",
    "yarn": ">=1.8.0"
  },
  "engineStrict": true,
  "main": "dist/lib/node/index.js",
  "module": "dist/es/browser/index.js",
  "types": "dist/ts/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "babel": "babel --extensions .js,.ts --copy-files --source-maps inline",
    "build": "export NODE_ENV=${NODE_ENV:-production}; npm run build:browser && npm run build:es && npm run build:lib && npm run build:ts",
    "build:browser": "webpack -r @babel/register --hide-modules --progress",
    "build:es": "BABEL_TARGET=es npm run babel -- src --out-dir dist/es",
    "build:lib": "npm run babel -- src --out-dir dist/lib",
    "build:ts": "tsc --pretty --emitDeclarationOnly",
    "clean": "rimraf coverage dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "validate:ts": "tsc --pretty --noEmit"
  },
  "dependencies": {
    "@remote-modules/helpers": "^0.0.0",
    "agentkeepalive": "^4.0.0",
    "core-js": "^2.5.7",
    "url-search-params-polyfill": "^5.0.0"
  },
  "devDependencies": {
    "babel-loader": "^8.0.4",
    "fast-async": "^6.3.8",
    "terser": "^3.10.11",
    "terser-webpack-plugin": "^1.1.0",
    "webpack": "^4.23.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2"
  }
}
