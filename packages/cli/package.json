{
  "name": "@remote-modules/cli",
  "version": "0.0.0",
  "license": "MIT",
  "description": "A module manager for distributed applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/bernardmcmanus/remote-modules.git"
  },
  "author": {
    "name": "Bernard McManus",
    "email": "bernard.mcmanus.iv@gmail.com",
    "url": "https://github.com/bernardmcmanus"
  },
  "homepage": "https://github.com/bernardmcmanus/remote-modules",
  "keywords": [
    "javascript",
    "universal",
    "remote",
    "module",
    "import",
    "dynamic",
    "cli"
  ],
  "engines:": {
    "node": ">=8",
    "npm": ">=6",
    "yarn": ">=1.8.0"
  },
  "engineStrict": true,
  "bin": {
    "remote-modules": "dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "babel": "babel --config-file ../../babel.config.js --extensions .js,.ts --copy-files --source-maps inline",
    "build": "NODE_ENV=${NODE_ENV:-production} npm run babel -- src --out-dir dist",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "validate:ts": "tsc --pretty --noEmit"
  },
  "dependencies": {
    "yargs": "^12.0.2"
  },
  "devDependencies": {
    "@types/yargs": "^12.0.1"
  }
}
